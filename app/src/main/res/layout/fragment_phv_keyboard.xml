<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    tools:context="com.prohsys.fragmentkeyboard.PhvKeyboardFragment"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/black"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:gravity="center_vertical|center_horizontal"
                android:text="100001"
                android:textColor="@color/colorKeyboardButton"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button"
                android:text="1"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button"
                android:text="2"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button"
                android:text="3"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button"
                android:text="4"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button"
                android:text="5"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button"
                android:text="6"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button"
                android:text="7"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button"
                android:text="8"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button"
                android:text="9"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button"
                android:text="@string/keyboard_back"
                android:textColor="@android:color/background_light"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="70dp"
                android:layout_height="35dp"

                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button"
                android:text="0"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btnEnter"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_button"
                android:text="@string/keyboard_enter"
                android:textColor="@android:color/background_light"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>